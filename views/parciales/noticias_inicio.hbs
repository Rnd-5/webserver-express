        <div class="card-body">
          <p class="card-text">{{titular}}</p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <a type="button" class="btn btn-sm btn-outline-secondary" href="/vista_noticia/{{id}}">Ver</a>
              <a type="button" class="btn btn-sm btn-outline-secondary" href="/editar_noticia/{{id}}">Editar</a>

            </div>
            <small class="text-muted">Autor: {{autor}}</small>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
    {{/each}}


  </div>
</div>
      
